{
    "compilerOptions": {
        "target": "ES2020",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "module": "Node16",
        "declaration": true,
        "strict": true,
        "moduleResolution": "Node16",
        "removeComments": false,
        "isolatedModules": true,
        "outDir": "build/",
        "skipLibCheck": true
    },
    "exclude": ["node_modules"],
    "include": ["src/"]
}
