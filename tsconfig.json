{
    "compilerOptions": {
        "target": "ES2016",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "module": "CommonJS",
        "declaration": true,
        "strict": true,
        "moduleResolution": "Node",
        "removeComments": false,
        "isolatedModules": true,
        "outDir": "build/"
    },
    "exclude": ["node_modules"],
    "include": ["src/"]
}